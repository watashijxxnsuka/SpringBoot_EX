<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.springboard.mapper.MemberMapper">
    <insert id="save" parameterType="com.bit.springboard.dto.MemberDto">
        INSERT INTO MEMBER(
                           USERNAME,
                           PASSWORD,
                           EMAIL,
                           NICKNAME,
                           TEL
        ) VALUES (
                  #{username},
                  #{password},
                  #{email},
                  #{nickname},
                  #{tel}
        )
    </insert>

    <select id="findLastMember"
            resultType="com.bit.springboard.dto.MemberDto">
        SELECT ID,
               USERNAME,
               EMAIL,
               NICKNAME,
               TEL,
               ROLE
        FROM MEMBER
        WHERE ID = (
            SELECT IFNULL(MAX(M.ID), 1)
                FROM MEMBER M
            )
    </select>
</mapper>